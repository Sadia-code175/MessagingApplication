<!DOCTYPE html>
<html>
  <head>
    <title>MessagingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= turbo_include_tags %>
  </head>
  <body>
    <header class="navbar navbar-expand-lg navbar-light bg-light mb-4">
      <div class="container">
        <%= link_to 'Messaging App', root_path, class: 'navbar-brand' %>
        
        <div class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <span class="nav-item nav-link">Logged in as <%= current_user.email %></span>
            <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-item btn btn-outline-danger' %>
          <% else %>
            <%= link_to 'Sign In', new_user_session_path, class: 'nav-item nav-link' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-item nav-link' %>
          <% end %>
        </div>
      </div>
    </header>

    <div class="container">
      <% flash.each do |type, msg| %>
        <div class="alert alert-<%= type %>">
          <%= msg %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>