
<h1>Start New Conversation</h1>

<%= form_with model: @conversation, url: conversations_path, local: true do |f| %>
  <div class="field">
    <%= f.label :recipient_id, "Select User" %>
    <%= f.select :recipient_id, 
                 options_for_select(@users.collect { |u| [u.email, u.id] }),
                 { include_blank: 'Select a user' },
                 { class: 'form-control', required: true } %>
  </div>

  <%= f.submit "Start Conversation", class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', conversations_path, class: 'btn btn-secondary' %>